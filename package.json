{
  "name": "@unexpected/tracker",
  "scripts": {
    "bundle": "npm run bundle:main && npm run bundle:modal",
    "bundle:main": "npx esbuild ./src/index.ts --bundle --minify --format=iife --outfile=./build/stonks.js",
    "bundle:modal": "npx esbuild ./src/modal.ts --bundle --minify --format=iife --outfile=./build/modal.js",
    "bundle:test": "npx esbuild ./src/index.ts --bundle --format=cjs --outfile=./build/stonks.js",
    "test": "pnpm vitest run"
  },
  "dependencies": {
    "@fingerprintjs/fingerprintjs": "^4.4.1",
    "jsdom": "^26.0.0",
    "node-fetch": "^2.7.0",
    "puppeteer": "^24.1.1",
    "puppeteer-core": "^24.1.1",
    "tsx": "^4.19.2",
    "vitest": "^3.0.5",
    "web-vitals": "^4.1.1"
  },
  "devDependencies": {
    "esbuild": "^0.23.0",
    "typescript": "^5.5.4"
  }
}
